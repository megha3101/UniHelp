<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davecomia.sdpunihelpg5.Register"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/etEmail"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/etFname" />

    <EditText
        android:id="@+id/etLname"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etID"
        app:layout_constraintLeft_toLeftOf="@+id/etFname"
        tools:layout_constraintBottom_creator="1" />

    <EditText
        android:id="@+id/etID"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="AUT ID"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@+id/etLname"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="235dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFname"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/etLname"
        app:layout_constraintLeft_toLeftOf="@+id/etPassword"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="AUT Email"
        android:inputType="textEmailAddress"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etFname"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="86dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etID" />

</android.support.constraint.ConstraintLayout>
